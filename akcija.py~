def _stdin():
    from sys import stdin
    for line in stdin:
        yield line

def akcija():
    from sys import stdout
    line = _stdin()
    # Initial commentary

    n = int(next(line))
    _min = 100000
    _sum = 0
    for j in range(n):
        if j < _min:
            _min = j
        _sum += j
    stdout.write('%d' % (_sum - _min))

    return


if __name__ == '__main__':
    akcija()